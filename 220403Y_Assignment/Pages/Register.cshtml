}

<script>
    function checkPasswordStrength() {
        var password = document.getElementById('RModel_Password').value;

        // Implement your password complexity checks here
        var strengthReason = '';

        // Check for at least 12 characters
        if (password.length < 12) {
            strengthReason = 'Less than 12 Characters';
        } else {
            // Check for a combination of lower-case, upper-case, numbers, and special characters
            var hasLowercase = /[a-z]/.test(password);
            var hasUppercase = /[A-Z]/.test(password);
            var hasNumber = /\d/.test(password);
            var hasSpecialCharacter = /[^a-zA-Z\d]/.test(password);

            if (hasLowercase && hasUppercase && hasNumber && hasSpecialCharacter) {
                strengthReason = 'Password Strength: Excellent';
            } else {
                // Provide specific feedback for each missing requirement
                var missingRequirements = [];
                if (!hasLowercase) {
                    missingRequirements.push('lower-case');
                }
                if (!hasUppercase) {
                    missingRequirements.push('upper-case');
                }
                if (!hasNumber) {
                    missingRequirements.push('number');
                }
                if (!hasSpecialCharacter) {
                    missingRequirements.push('special character');
                }

                strengthReason = 'Missing ' + missingRequirements.join(', ') + '.';
            }
        }

        // Display the password strength reason
        document.getElementById('passwordStrength').innerHTML = strengthReason;
    }


</script>

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-6">
            <h1 class="mb-3">Register</h1>

